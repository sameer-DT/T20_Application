
<div class="container mt-5">
  <div class="text-center mb-4">
    <h1>Match Details</h1>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <dl class="row">

            <dt class="col-sm-3">Match Date:</dt>
            <dd class="col-sm-9"><%= @match.date %></dd>

            <dt class="col-sm-3">Location:</dt>
            <dd class="col-sm-9"><%= @match.location %></dd>

            <dt class="col-sm-3">Team1 Score:</dt>
            <dd class="col-sm-9"><%= @match.score_team1 %></dd>

            <dt class="col-sm-3">Team2 Score:</dt>
            <dd class="col-sm-9"><%= @match.score_team2 %></dd>

          </dl>

          <div class="text-center mt-4">
            <%= link_to 'Edit', edit_match_path(@match), class: 'btn btn-primary' %>
            <%= link_to 'Back to Players', matches_path, class: 'btn btn-secondary ms-2' %>
            <%= link_to 'Go Back to Home', root_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
