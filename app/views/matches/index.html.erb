<div class="container">
  <div class="row justify-content-center mb-4">
    <h1 class="text-center my-4">Matches</h1>

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Date</th>
            <th>Location</th>
            <th>Score Team1</th>
            <th>Score Team2</th>
            <th>Team1 ID</th>
            <th>Team2 ID</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @matches.each do |match| %>
            <tr>
              <td><%= match.date %></td>
              <td><%= match.location %></td>
              <td><%= match.score_team1 %></td>
              <td><%= match.score_team2 %></td>
              <td><%= match.team1_id %></td>
              <td><%= match.team2_id %></td>
              <td><%= link_to 'Show', match, class: 'btn btn-info btn-sm' %></td>
              <td><%= link_to 'Edit', edit_match_path(match), class: 'btn btn-warning btn-sm' %></td>
              <td><%= link_to 'Delete', match, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to 'New Match', new_match_path, class: 'btn btn-success btn-lg' %>
      <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary btn-lg' %>
    </div>
             
          
  </div>
</div>
