<div class="container mt-5">
  <% if @player.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">The following errors prevented the article from being saved:</h4>
      <ul>
        <% @player.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@player, html: { class: 'form' }) do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :team_id, class: 'form-label' %>
      <%= form.text_field :team_id, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :age, class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :position, class: 'form-label' %>
      <%= form.text_field :position, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, options_for_select(Player::ROLES) %>
    </div>

    <div class="form-check mb-3">
      <%= form.check_box :is_captain, class: 'form-check-input' %>
      <%= form.label :is_captain, class: 'form-check-label' %>
    </div>

    <div class="form-check mb-3">
      <%= form.check_box :is_active, class: 'form-check-input' %>
      <%= form.label :is_active, class: 'form-check-label' %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save Player', class: 'btn btn-primary' %>
    </div>
  <% end %>
    <%= link_to 'Go Back to Home', root_path, class: 'btn btn-secondary' %>
          
</div>
