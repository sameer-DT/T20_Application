
<div class="container mt-5">
  <div class="text-center mb-4">
    <h1>Player Details</h1>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9"><%= @player.name %></dd>

            <dt class="col-sm-3">Team ID:</dt>
            <dd class="col-sm-9"><%= @player.team_id %></dd>

            <dt class="col-sm-3">Age:</dt>
            <dd class="col-sm-9"><%= @player.age %></dd>

            <dt class="col-sm-3">Position:</dt>
            <dd class="col-sm-9"><%= @player.position %></dd>

            <dt class="col-sm-3">Role:</dt>
            <dd class="col-sm-9"><%= @player.role %></dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9"><%= @player.description %></dd>
          </dl>

          <div class="text-center mt-4">
            <%= link_to 'Edit', edit_player_path(@player), class: 'btn btn-primary' %>
            <%= link_to 'Back to Players', players_path, class: 'btn btn-secondary ms-2' %>
            <%= link_to 'Go Back to Home', root_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
