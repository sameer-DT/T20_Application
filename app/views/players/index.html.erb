<h1 class="text-center">Players</h1>

<div class="container">
  <div class="row ">
    <div class="col-md-3 offset-md-3">
      <%= form_with(url: players_path, method: :get, local: true) do %>
        <div class="form-group">
          <%= label_tag :team_name%>
          <%= select_tag :team_name, options_from_collection_for_select(Team.all, :name, :name), include_blank: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :player_name %>
          <%= text_field_tag :player_name %>
        </div>
        <div class="form-group">
          <%= label_tag :age_from %>
          <%= number_field_tag :age_from, class: 'form-control' %>
          <%= label_tag :age_to%>
          <%= number_field_tag :age_to, class: 'form-control' %>
        </div>
        <%= submit_tag 'Search', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Team ID</th>
            <th>Age</th>
            <th>Position</th>
            <th>Captain</th>
            <th>Active</th>
            <th>Role</th>
            <th>Description</th>
            <th colspan=3>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><%= player.name %></td>
              <td><%= player.team_id %></td>
              <td><%= player.age%></td>
              <td><%= player.position%></td>
              <td><%= player.is_captain%></td>
              <td><%= player.is_active%></td>
              <td><%= player.role%></td>
              <td><%= player.description%></td>
              <td><%= link_to 'Show', player, class: 'btn btn-info btn-sm' %></td>
              <td><%= link_to 'Edit', edit_player_path(player), class: 'btn btn-warning btn-sm' %></td>
              <td><%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to 'New Player', new_player_path, class: 'btn btn-success btn-lg' %>
    </div>
  </div>
</div>