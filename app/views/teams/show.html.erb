
<div class="container mt-5">
  <h1 class="text-center"><%= @team.name %></h1>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <p><strong>Country:</strong> <%= @team.country %></p>
      <p><strong>Founded:</strong> <%= @team.founded %></p>
      <p><strong>Description:</strong> <%= @team.description %></p>

      <div class="mt-3 row row-cols-auto g-3">
          <div class="col">
            <%= link_to "Edit", edit_team_path(@team), class: 'btn btn-primary' %>
          </div>
          <div class="col">
            <%= link_to "Delete", team_path(@team), method: :delete, data: { confirm: "Are you sure you want to delete this team?" }, class: 'btn btn-danger' %>
          </div>
          <div class="col">
            <%= link_to "Back to Teams", teams_path, class: 'btn btn-secondary' %>
          </div>
          <div class="col">
            <%= link_to 'Go Back to Home', root_path, class: 'btn btn-secondary' %>
          </div>
      </div>

    </div>
  </div>
</div>
