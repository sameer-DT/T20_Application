
<div class="container">
  <% if @team.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">The following errors prevented the team from being saved:</h4>
      <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(@team, html: { class: 'form' }) do |form| %>
        <div class="form-group">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :country, class: 'form-label' %>
          <%= form.text_field :country, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :founded, class: 'form-label' %>
          <%= form.text_field :founded, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>
<br>
        <div class="form-group">
          <%= form.submit 'Save Team', class: 'btn btn-primary' %>
           <%= link_to 'Back to Teams', teams_path, class: 'btn btn-secondary' %>
        
                <%= link_to 'Go Back to Home', root_path, class: 'btn btn-secondary' %>
         
        </div>
      <% end %>

     
    </div>
  </div>
</div>
