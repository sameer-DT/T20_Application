
<h1 class="text-center my-4">Teams</h1>

<div class="container">
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Country</th>
          <th>Founded</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @team.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td><%= team.country %></td>
            <td><%= team.founded %></td>
            <td><%= team.description %></td>
            <td><%= link_to 'View', team_path(team), class: 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-warning btn-sm' %></td>
            <td><%= link_to 'Remove', team_path(team), method: :delete, data: { confirm: 'Are you sure you want to delete this team?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to 'Add New Team', new_team_path, class: 'btn btn-success btn-lg' %>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary btn-lg' %>
  </div>
</div>

</div>